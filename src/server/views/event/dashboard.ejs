<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/auth/js/getAuthUserInfo.js"></script>
    <script src="/event/js/dashboard.js"></script>
    <title>Document</title>
  </head>
  <body class="container p-5">
    <%- include('../_partials/logout.ejs'); %> <%-
    include('../_partials/breadcrumb.ejs') %>
    <h3>Event Dashboard</h3>
    <h1 id="event-id" style="display: none"><%= eventId %></h1>
    <h1><%= eventName %></h1>
    <a href="/event/<%= eventId %>/department/new" class="btn btn-success">
      Create Department
    </a>
    <div id="main-list" class="container">
      <!-- Item Design Start -->
      <!--
      <a href="">
        <div class="row mt-2">
          <div class="col">
            <h3>Department Name</h3>
          </div>
        </div>
      </a>
      -->
      <!-- Item Design End -->
      <% departments.forEach(department => { %>
      <a
        href="/event/<%= eventId %>/department/<%= department._id %>/dashboard"
      >
        <div class="row mt-2">
          <div class="col">
            <h3><%= department.name %></h3>
          </div>
        </div>
      </a>
      <% }) %>
    </div>
  </body>
</html>
